{
  "name": "tsbnb",
  "version": "1.0.0",
  "description": "An Airbnb clone using React, Redux, and TypeScript",
  "author": "Chris Baker <mail.chris.baker@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "parcel build src/index.html",
    "dev": "parcel -p 8080 --hmr-port 8081 src/index.html",
    "precommit": "lint-staged",
    "start": "serve -s dist",
    "test": "jest"
  },
  "lint-staged": {
    "*.json": [
      "prettier-json",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupFiles": [
      "./test/setup.js"
    ],
    "testRegex": "test/.*.test.(ts|tsx|js|jsx)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "serve": "^8.1.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.0.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "parcel-bundler": "^1.8.1",
    "prettier": "^1.13.5",
    "prettier-json": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "typescript": "^2.9.1"
  }
}
